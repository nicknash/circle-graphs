{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "CMake Tools: Debug Single Test",
      "type": "cppdbg",
      "request": "launch",
      "program": "${command:cmake.testProgramPath}",
      "args": ["${command:cmake.testArgs}"],
      "cwd": "${command:cmake.testCwd}",
      "MIMode": "gdb",
      "miDebuggerPath": "/usr/bin/gdb",
      "externalConsole": false,
      "presentation": { "hidden": true } // hides it from the F5 picker
    },
    {
      "name": "App: circle-graphs",
      "type": "cppdbg",
      "request": "launch",
      "program": "${command:cmake.launchTargetPath}",
      "args": [],
      "cwd": "${command:cmake.launchTargetDirectory}",
      "MIMode": "gdb",
      "miDebuggerPath": "/usr/bin/gdb"
    }
  ]
}
